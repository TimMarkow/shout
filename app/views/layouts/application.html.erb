<!DOCTYPE html>
<html>
<head>
  <title>Shout</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="flash">
		<% flash.each do |key, value| -%>
		  <div id="flash_<%= key %>"><%= raw value %></div>
		<% end -%>

<%= yield %>

</body>
</html>
